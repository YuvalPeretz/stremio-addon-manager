{
  "name": "@stremio-addon-manager/electron",
  "version": "1.0.0",
  "description": "Electron GUI for Stremio Addon Manager",
  "main": "dist/main/index.js",
  "type": "commonjs",
  "scripts": {
    "dev": "concurrently \"npm run dev:main\" \"npm run dev:renderer\"",
    "dev:main": "tsc --build tsconfig.main.json --watch",
    "dev:renderer": "vite",
    "build": "npm run build:main && npm run build:renderer",
    "build:main": "tsc --build tsconfig.main.json",
    "build:renderer": "tsc --build tsconfig.renderer.json && vite build",
    "start": "electron .",
    "package": "electron-builder",
    "clean": "rimraf dist .tsbuildinfo"
  },
  "dependencies": {
    "@stremio-addon-manager/core": "^1.0.0",
    "antd": "^5.12.0",
    "jotai": "^2.6.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-icons": "^5.0.0",
    "react-router-dom": "^6.21.0"
  },
  "devDependencies": {
    "@types/react": "^18.2.0",
    "@types/react-dom": "^18.2.0",
    "@vitejs/plugin-react": "^4.2.0",
    "concurrently": "^8.2.0",
    "electron": "^28.0.0",
    "electron-builder": "^24.9.0",
    "sass": "^1.69.0",
    "vite": "^5.0.0",
    "vite-plugin-electron": "^0.28.0"
  },
  "build": {
    "appId": "com.stremio.addon.manager",
    "productName": "Stremio Addon Manager",
    "directories": {
      "output": "release"
    },
    "files": [
      "dist/**/*",
      "package.json"
    ],
    "win": {
      "target": [
        "nsis"
      ],
      "icon": "assets/icon.ico"
    },
    "mac": {
      "target": [
        "dmg"
      ],
      "icon": "assets/icon.icns"
    },
    "linux": {
      "target": [
        "AppImage",
        "deb"
      ],
      "icon": "assets/icon.png",
      "category": "Utility"
    }
  }
}