{
  "name": "@stremio-addon-manager/electron",
  "version": "1.0.0",
  "description": "Electron GUI for Stremio Addon Manager",
  "author": "Stremio Addon Manager Team",
  "main": "dist/src/main/index.js",
  "type": "module",
  "exports": {
    ".": {
      "types": "./dist/src/main/index.d.ts",
      "import": "./dist/src/main/index.js",
      "default": "./dist/src/main/index.js"
    }
  },
  "scripts": {
    "dev": "vite",
    "dev:main": "tsc --build tsconfig.json tsconfig.preload.json --watch",
    "dev:renderer": "vite --config vite.renderer.config.ts",
    "build": "npm run build:packages && vite build",
    "build:packages": "npm run build:cli && node scripts/copy-packages.js",
    "build:cli": "cd ../cli && npm run build",
    "build:main": "tsc --build tsconfig.json && tsc --build tsconfig.preload.json && node scripts/rename-preload.js",
    "build:renderer": "vite build --config vite.renderer.config.ts",
    "start": "npm run build:main && electron .",
    "package": "electron-builder",
    "clean": "rimraf dist .tsbuildinfo resources"
  },
  "dependencies": {
    "@stremio-addon-manager/core": "^1.0.0",
    "antd": "^5.12.0",
    "jotai": "^2.6.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-icons": "^5.0.0",
    "react-router-dom": "^6.21.0"
  },
  "devDependencies": {
    "@types/react": "^18.2.0",
    "@types/react-dom": "^18.2.0",
    "@vitejs/plugin-react": "^4.2.0",
    "concurrently": "^8.2.0",
    "electron": "^28.0.0",
    "electron-builder": "^24.9.0",
    "sass": "^1.69.0",
    "vite": "^5.0.0",
    "vite-plugin-electron": "^0.28.0"
  },
  "build": {
    "appId": "com.stremio.addon.manager",
    "productName": "Stremio Addon Manager",
    "electronVersion": "28.0.0",
    "directories": {
      "output": "release"
    },
    "files": [
      "dist/**/*",
      "package.json",
      "resources/**/*"
    ],
    "mac": {
      "target": [
        "dmg",
        "zip"
      ],
      "hardenedRuntime": false,
      "gatekeeperAssess": false,
      "identity": null
    },
    "win": {
      "target": [
        "nsis"
      ]
    },
    "linux": {
      "target": [
        "AppImage",
        "deb"
      ],
      "category": "Utility"
    },
    "afterSign": "scripts/sign.js"
  }
}