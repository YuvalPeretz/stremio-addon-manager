{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    "baseUrl": ".",
    "outDir": "dist",
    "allowJs": true,
    "target": "ES2020",
    "module": "ESNext",
    "lib": ["ES2020"],
    "jsx": "preserve",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "declaration": true,
    "sourceMap": true,
    "noImplicitAny": true,
    "paths": {
      "*": ["node_modules/*"]
    }
  },
  "include": ["src/main/**/*.ts"],
  "exclude": ["node_modules", "dist", "src/renderer", "src/main/preload.ts"]
}
