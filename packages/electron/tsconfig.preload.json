{
  "compilerOptions": {
    "baseUrl": ".",
    "outDir": "dist/src/main",
    "target": "ES2020",
    "module": "CommonJS",
    "lib": ["ES2020"],
    "moduleResolution": "node",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "skipLibCheck": true,
    "strict": true,
    "declaration": true,
    "sourceMap": true,
    "resolveJsonModule": true
  },
  "include": ["src/main/preload.ts"],
  "exclude": ["node_modules", "dist", "src/renderer", "src/main/index.ts"]
}
