{
  "name": "@stremio-addon-manager/cli",
  "version": "1.0.0",
  "type": "module",
  "main": "dist/index.js",
  "bin": {
    "stremio-addon-manager": "./bin/cli.js"
  },
  "scripts": {
    "build": "npm run build:packages && tsc --build",
    "build:packages": "npm run build:core && npm run build:addon-server && node scripts/copy-packages.js",
    "build:core": "cd ../core && npm run build",
    "build:addon-server": "cd ../addon-server && npm run build",
    "dev": "tsc --build --watch",
    "clean": "rimraf dist .tsbuildinfo resources"
  },
  "dependencies": {
    "@stremio-addon-manager/core": "^1.0.0",
    "chalk": "^5.0.0",
    "commander": "^11.0.0",
    "inquirer": "^9.0.0",
    "ora": "^7.0.0"
  },
  "devDependencies": {
    "@types/chalk": "^0.4.31",
    "@types/inquirer": "^9.0.9",
    "@types/ora": "^3.1.0"
  }
}
